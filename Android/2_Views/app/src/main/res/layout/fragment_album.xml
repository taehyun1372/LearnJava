<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlbumFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Would you start selection"
            android:textSize="20sp"/>

        <CheckBox
            android:id="@+id/startCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"/>

        <TextView
            android:id="@+id/selectionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whcih one do you like"
            android:textSize="20sp"
            android:visibility="invisible"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/selectionGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible">
                <RadioButton
                    android:id="@+id/puppyButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puppy"/>
                <RadioButton
                    android:id="@+id/catButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cat"/>
                <RadioButton
                    android:id="@+id/rabbitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rabbit"/>
            </RadioGroup>
        </LinearLayout>
        <Button
            android:id="@+id/completeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/resultImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"/>

    </LinearLayout>

</FrameLayout>